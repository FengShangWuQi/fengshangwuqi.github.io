{
  "name": "fswq-blog",
  "private": true,
  "author": "fengshangwuqi <fengshanguwqi@gmail.com>",
  "homepage": "https://blog.fengshangwuqi.com/",
  "keywords": [
    "gatsby",
    "react",
    "typescript",
    "emotion"
  ],
  "appkit": {
    "dev": "gatsby develop -o",
    "build": "gatsby build --prefix-paths",
    "release": "gh-pages -d public -b {DEPLOY_BRANCH} && gh-pages-clean"
  },
  "scripts": {
    "clean": "gatsby clean",
    "format": "prettier --write .",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "test": "jest --coverage && tsc",
    "generate": "ts-node ./script/generate.ts",
    "start": "appkit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@fengshangwuqi/eslint-config"
    ],
    "ignorePatterns": [
      "node_modules",
      "public",
      ".cache",
      "coverage"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": 0,
      "@typescript-eslint/camelcase": 0
    }
  },
  "prettier": {
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.3.0",
    "@mdx-js/mdx": "1.6.22",
    "@mdx-js/react": "1.6.22",
    "facepaint": "1.2.1",
    "gatsby": "3.4.0",
    "gatsby-image": "3.4.0",
    "gatsby-plugin-catch-links": "3.4.0",
    "gatsby-plugin-emotion": "6.4.0",
    "gatsby-plugin-feed": "3.4.0",
    "gatsby-plugin-google-analytics": "3.4.0",
    "gatsby-plugin-mdx": "2.4.0",
    "gatsby-plugin-offline": "4.4.0",
    "gatsby-plugin-react-helmet": "4.4.0",
    "gatsby-plugin-react-svg": "3.0.1",
    "gatsby-plugin-sharp": "3.4.0",
    "gatsby-plugin-twitter": "3.4.0",
    "gatsby-plugin-typescript": "3.4.0",
    "gatsby-remark-autolink-headers": "4.1.0",
    "gatsby-remark-copy-linked-files": "4.1.0",
    "gatsby-remark-emojis": "0.4.3",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-images": "5.1.0",
    "gatsby-remark-prismjs": "5.1.0",
    "gatsby-remark-responsive-iframe": "4.1.0",
    "gatsby-remark-smartypants": "4.1.0",
    "gatsby-source-filesystem": "3.4.0",
    "gatsby-transformer-sharp": "3.4.0",
    "immer": "9.0.2",
    "lodash": "4.17.21",
    "polished": "4.1.2",
    "prismjs": "1.23.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-spring": "9.1.2",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "7.13.0",
    "@fengshangwuqi/appkit": "1.0.32",
    "@fengshangwuqi/dev-deps": "1.0.24",
    "@fengshangwuqi/eslint-config": "1.0.31",
    "@fengshangwuqi/logger": "1.0.6",
    "@fengshangwuqi/ts-config": "1.0.4",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.2",
    "@types/facepaint": "1.2.1",
    "@types/fs-extra": "9.0.11",
    "@types/globby": "9.1.0",
    "@types/inquirer": "7.3.1",
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.168",
    "@types/node": "15.0.1",
    "@types/react": "17.0.4",
    "@types/react-dom": "17.0.3",
    "@types/react-helmet": "6.1.1",
    "babel-jest": "26.6.3",
    "babel-preset-gatsby": "1.4.0",
    "chalk": "4.1.1",
    "date-fns": "2.21.1",
    "fs-extra": "9.1.0",
    "gh-pages": "3.1.0",
    "globby": "11.0.3",
    "jest": "26.6.3",
    "react-test-renderer": "17.0.2"
  },
  "license": "MIT"
}
