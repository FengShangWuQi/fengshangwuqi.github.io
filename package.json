{
  "name": "fswq-blog",
  "private": true,
  "author": "fengshangwuqi <fengshanguwqi@gmail.com>",
  "homepage": "https://fengshangwuqi.github.io",
  "keywords": [
    "gatsby",
    "react",
    "typescript",
    "emotion"
  ],
  "workspaces": [
    "packages/*"
  ],
  "appkit": {
    "dev": "gatsby develop -o",
    "build": "npm run clean && gatsby build --prefix-paths",
    "release": "gh-pages -d public -b {DEPLOY_BRANCH} && gh-pages-clean"
  },
  "scripts": {
    "clean": "gatsby clean && rimraf typings",
    "format": "prettier --write '**/*.{js,ts,tsx,json,md}'",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "test": "jest --coverage",
    "tsc": "tsc",
    "ncu": "ncu -u && lerna exec -- ncu -u",
    "pkg:clean": "lerna exec rimraf dist",
    "pkg:init": "ts-node packages/pkgkit/bin/pkgkit.js init",
    "pkg:build": "lerna run --scope @fengshangwuqi/pkgkit build && lerna exec pkgkit build",
    "pkg:r": "lerna version patch --no-commit-hooks --yes",
    "generate": "ts-node ./tools/generate/index.ts",
    "start": "ts-node packages/appkit/bin/appkit.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn test && yarn tsc",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config"
    ],
    "ignorePatterns": [
      "node_modules",
      "public",
      ".cache",
      "dist"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@svgr/webpack": "5.3.1",
    "axios": "0.19.2",
    "emotion-theming": "10.0.27",
    "facepaint": "1.2.1",
    "gatsby": "2.20.23",
    "gatsby-image": "2.3.3",
    "gatsby-plugin-feed": "^2.4.2",
    "gatsby-plugin-svgr": "^2.0.2",
    "immer": "6.0.3",
    "lodash": "4.17.15",
    "polished": "3.5.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-spring": "8.0.27",
    "rxjs": "6.5.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.2",
    "@testing-library/react-hooks": "3.2.1",
    "@types/cross-spawn": "6.0.1",
    "@types/facepaint": "1.2.1",
    "@types/fs-extra": "8.1.0",
    "@types/globby": "9.1.0",
    "@types/inquirer": "6.5.0",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.150",
    "@types/node": "13.11.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "babel-jest": "25.3.0",
    "babel-preset-gatsby": "0.3.2",
    "chalk": "4.0.0",
    "cross-spawn": "7.0.2",
    "fs-extra": "9.0.0",
    "gh-pages": "2.2.0",
    "globby": "11.0.0",
    "jest": "25.3.0",
    "lerna": "3.20.2",
    "react-test-renderer": "16.13.1"
  },
  "license": "MIT"
}
