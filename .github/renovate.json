{
  "extends": ["config:base", ":automergePr", ":automergeMinor"],
  "baseBranches": ["dev"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^gatsby", "babel-preset-gatsby"],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "react",
        "react-dom",
        "react-test-renderer",
        "@types/react",
        "@types/react-dom",
        "@testing-library/react",
        "@testing-library/react-hooks"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": ["typescript"],
      "automerge": false
    },
    {
      "excludePackageNames": [
        "@mdx-js/mdx",
        "@mdx-js/react",
        "gatsby-plugin-image",

        "react",
        "react-dom",
        "react-test-renderer",
        "@types/react",
        "@types/react-dom",
        "@testing-library/react",
        "@testing-library/react-hooks",

        "execa",
        "globby"
      ]
    }
  ]
}
