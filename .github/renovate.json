{
  "extends": ["config:base", ":automergePr", ":automergeMinor"],
  "baseBranches": ["dev"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^gatsby"],
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^react$", "^react-dom$"],
      "automerge": false
    },
    {
      "matchPackageNames": ["typescript"],
      "automerge": false
    },
    {
      "excludePackageNames": [
        "@mdx-js/mdx",
        "@mdx-js/react",
        "gatsby-plugin-image",

        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
        "@testing-library/react",
        "@testing-library/react-hooks",
        "react-test-renderer",

        "execa"
      ]
    }
  ]
}
