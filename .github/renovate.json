{
  "extends": ["config:base", ":automergePr", ":automergeMinor"],
  "baseBranches": ["dev"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^gatsby"],
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^react$", "^react-dom$"],
      "automerge": false
    },
    {
      "excludePackageNames": [
        "gatsby-plugin-image",
        "globby",
        "@babel/plugin-transform-typescript"
      ]
    }
  ]
}
